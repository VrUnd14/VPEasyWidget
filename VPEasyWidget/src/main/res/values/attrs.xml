<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VPTextView">
        <attr name="icon" format="reference" />
        <attr name="icon_size" format="dimension" />
        <attr name="iconTint" format="color" />
        <attr name="showIcon" format="boolean" />
        <attr name="icon_position" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="backColor" format="color" />
        <attr name="isCapsule" format="boolean" />
        <attr name="capsuleRadius" format="dimension" />
        <attr name="cornerRadiusTopLeft" format="dimension" />
        <attr name="cornerRadiusBottomLeft" format="dimension" />
        <attr name="cornerRadiusTopRight" format="dimension" />
        <attr name="cornerRadiusBottomRight" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="hasBorder" format="boolean" />

        <attr name="customFont" format="string" />
    </declare-styleable>

    <declare-styleable name="VPImageView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="shape" format="enum">
            <enum name="normal" value="0" />
            <enum name="dynamic" value="1" />
            <enum name="square" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="VPNoDataWidget">
        <attr name="no_icon" format="reference" />
        <attr name="no_iconSize" format="dimension" />
        <attr name="no_iconTint" format="color|reference" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:textStyle" />
    </declare-styleable>

    <declare-styleable name="VPSpinner">
        <attr name="sp_cornerRadius" format="dimension" />
        <attr name="sp_backColor" format="color" />
        <attr name="sp_hasBorder" format="boolean" />
        <attr name="sp_borderWidth" format="dimension" />
        <attr name="sp_tint" format="color" />
        <attr name="sp_cross_tint" format="color" />

        <attr name="sp_hasLabel" format="boolean" />
        <attr name="sp_labelText" format="string" />
        <attr name="sp_labelTextSize" format="dimension" />

        <attr name="sp_dropSize" format="dimension" />
        <attr name="sp_dropIcon" format="reference" />

        <attr name="sp_label_position" format="enum">
            <enum name="in" value="1" />
            <enum name="top" value="2" />
        </attr>

        <attr name="sp_array" format="reference" />
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="VPAutoComplete">
        <attr name="act_cornerRadius" format="dimension" />
        <attr name="act_backColor" format="color" />
        <attr name="act_hasBorder" format="boolean" />
        <attr name="act_borderWidth" format="dimension" />
        <attr name="act_tint" format="color" />
        <attr name="act_cross_tint" format="color" />

        <attr name="act_hasDrop" format="boolean" />
        <attr name="act_hasLabel" format="boolean" />
        <attr name="act_labelText" format="string" />
        <attr name="act_labelTextSize" format="dimension" />

        <attr name="act_dropSize" format="dimension" />
        <attr name="act_dropIcon" format="reference" />

        <attr name="act_label_position" format="enum">
            <enum name="in" value="1" />
            <enum name="top" value="2" />
        </attr>

        <attr name="android:hint" />
        <attr name="android:text" />
        <attr name="android:textColorHint" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="act_textAllCaps" format="boolean" />
        <attr name="android:textStyle" />
        <attr name="android:inputType" />
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="VPEditText">
        <attr name="et_icon" format="reference" />
        <attr name="et_icon_size" format="dimension" />
        <attr name="et_iconTint" format="color" />
        <attr name="et_showIcon" format="boolean" />
        <attr name="et_icon_position" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="et_backColor" format="color" />
        <attr name="et_isCapsule" format="boolean" />
        <attr name="et_capsuleRadius" format="dimension" />
        <attr name="et_cornerRadiusTopLeft" format="dimension" />
        <attr name="et_cornerRadiusBottomLeft" format="dimension" />
        <attr name="et_cornerRadiusTopRight" format="dimension" />
        <attr name="et_cornerRadiusBottomRight" format="dimension" />
        <attr name="et_borderColor" format="color" />
        <attr name="et_borderWidth" format="dimension" />
        <attr name="et_hasBorder" format="boolean" />

        <attr name="et_customFont" format="string" />
    </declare-styleable>

    <declare-styleable name="VPLinearLayout">
        <attr name="ll_isCapsule" format="boolean" />
        <attr name="ll_capsuleRadius" format="dimension" />
        <attr name="ll_cornerRadiusTopLeft" format="dimension" />
        <attr name="ll_cornerRadiusBottomLeft" format="dimension" />
        <attr name="ll_cornerRadiusTopRight" format="dimension" />
        <attr name="ll_cornerRadiusBottomRight" format="dimension" />
        <attr name="ll_backColor" format="color" />
        <attr name="ll_borderWidth" format="dimension" />
        <attr name="ll_borderColor" format="color" />
    </declare-styleable>

    <declare-styleable name="VPRelativeLayout">
        <attr name="rl_isCapsule" format="boolean" />
        <attr name="rl_capsuleRadius" format="dimension" />
        <attr name="rl_cornerRadiusTopLeft" format="dimension" />
        <attr name="rl_cornerRadiusBottomLeft" format="dimension" />
        <attr name="rl_cornerRadiusTopRight" format="dimension" />
        <attr name="rl_cornerRadiusBottomRight" format="dimension" />
        <attr name="rl_backColor" format="color" />
        <attr name="rl_borderWidth" format="dimension" />
        <attr name="rl_borderColor" format="color" />
    </declare-styleable>

    <declare-styleable name="VPFrameLayout">
        <attr name="fl_isCapsule" format="boolean" />
        <attr name="fl_capsuleRadius" format="dimension" />
        <attr name="fl_cornerRadiusTopLeft" format="dimension" />
        <attr name="fl_cornerRadiusBottomLeft" format="dimension" />
        <attr name="fl_cornerRadiusTopRight" format="dimension" />
        <attr name="fl_cornerRadiusBottomRight" format="dimension" />
        <attr name="fl_backColor" format="color" />
        <attr name="fl_borderWidth" format="dimension" />
        <attr name="fl_borderColor" format="color" />
    </declare-styleable>
</resources>